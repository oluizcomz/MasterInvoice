<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MasterInvoice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MasterInvoice.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font
/bootstrap-icons.min.css">
    <style>
       
        body {
            display: flex;
            font-size: 24px;
            background-color: rgb(240,240,245)
        }

        body header .page-title {
            font-size: 24px;
        }

        .vertical-nav {
            min-width: 280px;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding-top: 20px;
        }

        .vertical-nav .navbar-nav .nav-link:hover {
                background-color: rgba(248, 249, 250, 0.5);
                color: #F02D6E;
                border-radius: 20px 0 0 20px;
        }

        .content.expanded {
            margin-left: 0;
            width: 100%;
        }
        .content {
            margin-left: 280px;
            min-width: calc(100% - 280px);
        }

        .vertical-nav .navbar-nav .nav-link.active {
            background-color: #f8f9fa;
            color: #F02D6E !important;
            border-radius: 20px 0 0 20px;
        }

        header .page-title {
            padding: 10px;
            background-color: #f8f9fa;
            border-bottom: 1px solid #f8f9fa;
        }

        header .user-navbar {
            margin-left: auto;
            display: flex;
            align-items: center;
        }

        body .bg-colorPrimay{
            background-color: #F02D6E;

        }

        body .container-fluid{
            padding-right: 0;
        }

        .vertical-nav.hidden {
            display: none;
        }
       
    </style>
</head>
<body>
    <nav class="vertical-nav navbar-dark bg-colorPrimay" id="leftBar">
        <div class="container-fluid">
            <a class="navbar-brand " asp-area="" asp-controller="Dashboard" asp-action="Index">
                <h3 class="p-2">
                    <i class="bi bi-boxes"></i>
                        MasterInvoice
                 </h3>
            </a>
            <ul class="navbar-nav flex-column mt-lg-5">
                <li  class="nav-item">
                    <a id="li-dashboard" asp-area="" asp-controller="Dashboard" asp-action="Index" class="nav-link px-3">
                        <span class="me-2"><i class="bi bi-speedometer"></i></span>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a id="li-invoice" asp-area="" asp-controller="Invoices" asp-action="Index" class="nav-link px-3">
                        <span class="me-2">
                            <i class="bi bi-receipt-cutoff"></i>
                        </span>
                        <span>Nota Fiscal</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content" id="mainContent">
        <header>
            <div class="page-title d-flex">
                <button  class="navbar-toggler p-2" onclick="hidenleftBar()">
                    <span class="me-2"> <i style="font-size: 24px;"  class="bi bi-justify"></i></span>
                </button>
                <h1 class="p-2">@ViewData["Title"]</h1>
                <div class="user-navbar">
                    <i class="bi bi-person-circle"></i>
                    Usuario
                </div>
            </div>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    function hidenleftBar() {
        const leftBar = document.getElementById('leftBar');
        const mainContent = document.getElementById('mainContent');
        leftBar.classList.toggle('hidden');
        mainContent.classList.toggle('expanded');
    }
</script>
